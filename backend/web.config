<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Reverse proxy all API requests to backend Node server running on localhost:5005 -->
    <rewrite>
      <rules>
        <rule name="ReverseProxyToBackend" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <!-- only proxy API routes; static files served by IIS directly if present -->
            <add input="{REQUEST_URI}" pattern="^/api/.*" />
          </conditions>
          <action type="Rewrite" url="http://localhost:5005/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <httpProtocol>
      <customHeaders>
        <add name="X-Forwarded-Proto" value="https" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
